{
    "name": "@local/ci",
    "private": true,
    "scripts": {
        "prestart": "tsc --build ./tsconfig.json",
        "start": "node .",
        "setup": "export TF_PLUGIN_CACHE_DIR=\".tf-cache\"",
        "initialize": "npm run setup && cdktf get --language typescript && echo",
        "post-install": "npm run initialize",
        "apply": "cdktf deploy",
        "destroy": "terraform destroy",
        "build": "cdktf get && tsc --build tsconfig.json",
        "synth": "cdktf synth",
        "compile": "tsc --pretty",
        "deploy": "cdktf deploy",
        "watch": "tsc -w",
        "pre-test": "npm run build",
        "pretest": "npm run pre-test",
        "test": "jest --injectGlobals",
        "test-watch": "npm run pre-test && jest --injectGlobals --watch",
        "test-update": "npm run pre-test && jest --injectGlobals --update-snapshot",
        "upgrade": "npm i cdktf@latest cdktf-cli@latest",
        "upgrade:next": "npm i cdktf@next cdktf-cli@next"
    },
    "dependencies": {
        "@cdktf/provider-github": "^0.7.37",
        "cdktf": "^0.10.3",
        "constructs": "^10.0.127",
        "dotenv": "^16.0.0",
        "dotenv-expand": "^8.0.3",
        "esm": "^3.2.25"
    },
    "devDependencies": {
        "@jest/globals": "^28.0.3",
        "@types/esm": "^3.2.0",
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.29",
        "cdktf-cli": "^0.10.3",
        "jest": "^28.0.3",
        "ts-jest": "^28.0.0-next.3",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.3"
    },
    "jest": {
        "coverageReporters": [
            "clover",
            "json",
            "lcov",
            "text",
            "html"
        ],
        "collectCoverage": true,
        "coverageDirectory": "coverage",
        "coverageProvider": "v8",
        "extensionsToTreatAsEsm": [
            ".ts"
        ],
        "verbose": true,
        "automock": false,
        "clearMocks": true,
        "resetMocks": true,
        "preset": "ts-jest/presets/default-esm",
        "globals": {
            "ts-jest": {
                "useESM": true
            }
        },
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.test.ts$": "$1"
        },
        "testRegex": "./(unit-testing/.*|(\\.|/)(test|spec))\\.ts$",
        "testPathIgnorePatterns": [
            "index.ts",
            "/node_modules/"
        ]
    }
}
