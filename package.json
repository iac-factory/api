{
    "name": "@iac-factory/api",
    "private": true,
    "type": "commonjs",
    "devDependencies": {
        "@commitlint/cli": "^16.2.4",
        "@commitlint/config-conventional": "^16.2.4",
        "@commitlint/prompt-cli": "^16.2.4",
        "@jest/globals": "^28.1.0",
        "@swc/core": "^1.2.182",
        "@swc/helpers": "^0.3.15",
        "@tsconfig/esm": "^1.0.0",
        "@tsconfig/node16-strictest-esm": "^1.0.1",
        "@types/jest": "^27.5.1",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/node": "^17.0.34",
        "@typescript-eslint/eslint-plugin": "^5.25.0",
        "conventional-changelog-conventionalcommits": "^4.6.3",
        "eslint": "^8.16.0",
        "eslint-plugin-import": "^2.26.0",
        "husky": "^7.0.4",
        "jest": "^28.1.0",
        "lerna": "^4.0.0",
        "nodemon": "^2.0.16",
        "ts-jest": "^28.0.2",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.4"

    },
    "dependencies": {
        "@iac-factory/api-core": "file:packages/core",
        "@iac-factory/api-database": "file:packages/database",
        "@iac-factory/api-middleware": "file:packages/middleware",
        "@iac-factory/api-routing": "file:packages/routing",
        "@iac-factory/api-schema": "file:packages/schema",
        "@iac-factory/api-services": "file:packages/service",
        "@iac-factory/ecma": "file:packages/ecma",
        "tslib": "^2.4.0",
        "dotenv": "^16.0.1",
        "dotenv-expand": "^8.0.3"
    },
    "author": {
        "name": "Jacob B. Sanders",
        "url": "https://github.com/iac-factory",
        "organization": true
    },
    "scripts": {
        "production": "npm install --install-links --omit dev --omit optional --omit peer",
        "setup": "lerna init && lerna link && npm run post-setup",
        "post-setup": "lerna bootstrap --npm-client npm",
        "build": "tsc --build $(dirname $(npm root))",
        "release": "lerna version patch --no-private",
        "postversion": "lerna publish from-git --canary --no-private",
        "post-version-git": "lerna publish from-git --registry https://npm.pkg.github.com/ --canary --no-private",
        "ci": "npm run release",
        "pretest": "tsc",
        "test": "node --experimental-vm-modules $(command -v jest) --config jest.config.js --injectGlobals --detectOpenHandles",
        "commit": "git add --all && commit",
        "prestart": "tsc",
        "start": "ts-node $(dirname $(npm root))",
        "development": "nodemon --ext ts --ignore js --exec \"tsc --diagnostics && ts-node .\"",
        "test-commit": "npx commitlint --from HEAD~1 --to HEAD --verbose",
        "uninstall-husky": "npm uninstall husky && git config --unset core.hooksPath",
        "maps": "find ./packages -type f -name '*.map' -exec rm -rf {} \\;",
        "declarations": "find ./packages -type f -name '*.d.*' -exec rm -rf {} \\;",
        "clean": "npm run declarations && npm run maps && find ./packages -type f -name '*.js' -exec rm -rf {} \\;"
    },
    "husky": {
        "hooks": {
            "commit-msg": "exec scripts/.husky/commit-msg"
        }
    }
}
